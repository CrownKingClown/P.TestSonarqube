<script>
    function fupdate(btn) {
        let id = btn.name;

        /*ajax call */
        var dati = "id=" + btn.name;
        event.preventDefault();
        $.ajax({
            global: false,
            type: 'POST',
            url: '/ub/update',
            dataType: 'html',
            data: dati,
            success: function (resp) {

                $.notify({
                    title: '<b>Perfetto!</b>',
                    message: 'Aggiornato!'
                }, {
                    type: 'success',
                    delay: 1000,
                    allow_dismiss: true,
                    newest_on_top: true,
                    showProgressbar: false,
                    placement: {
                        from: "top",
                        align: "center"
                    },
                });
                document.getElementById("data" + id).innerHTML = moment().format("DD/MM/YYYY HH:mm:ss")
            },
            error: function (err) {
                console.log(err);
                $.notify({
                    title: '<b>Errore!</b>',
                    message: 'Si Ã¨ verificato un errore, avviso Roman!'
                }, {
                    type: 'danger',
                    delay: 1000,
                    allow_dismiss: true,
                    newest_on_top: true,
                    showProgressbar: false,
                    placement: {
                        from: "top",
                        align: "center"
                    },
                });
            }
        });
    }
</script>