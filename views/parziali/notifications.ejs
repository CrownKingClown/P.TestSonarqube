<% if(success && success.length > 0){ %>
<script>
    $(document).ready(function () {
        $.notify({
            title: '<b>Perfetto!</b>',
            message: '<%= success %>'
        }, {
            type: 'success',
            delay: 1000,
            allow_dismiss: true,
            newest_on_top: true,
            showProgressbar: false,
            placement: {
                from: "top",
                align: "center"
            },
        });
    });
</script>
<% } %>

